<!DOCTYPE html>
<html>
<head>
  <title>NotGoalApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash[:errors] %>
    <%= flash[:errors] %>
  <% end %>

<% if signed_in? %>
  <%= render 'layouts/user_info' %>
<% end %>

<%= yield %>

</body>
</html>
